{
    "name": "ghostwriter/http",
    "description": "HTTP Client and Server abstraction for PHP.",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "ghostwriter",
        "http"
    ],
    "authors": [
        {
            "name": "Nathanael Esayeas",
            "email": "nathanael.esayeas@protonmail.com",
            "homepage": "https://github.com/ghostwriter",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/ghostwriter/http",
    "support": {
        "issues": "https://github.com/ghostwriter/http/issues",
        "forum": "https://github.com/ghostwriter/http/discussions",
        "source": "https://github.com/ghostwriter/http",
        "docs": "https://github.com/ghostwriter/http",
        "rss": "https://github.com/ghostwriter/http/releases.atom"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/ghostwriter"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "ghostwriter/coding-standard": "dev-main",
        "ghostwriter/psalm-plugin": "^0.2 || ^1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ghostwriter\\Http\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ghostwriter\\HttpTests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ghostwriter/coding-standard": true
        },
        "classmap-authoritative": false,
        "discard-changes": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": true,
        "sort-packages": true,
        "use-parent-dir": false
    },
    "scripts": {
        "bench": "vendor/ghostwriter/coding-standard/tools/phpbench run --colors=always --report=default",
        "cache:clear": "rm -rf ./.cache/*",
        "check": [
            "@composer validate",
            "@ecs",
            "@test"
        ],
        "composer-normalize": "vendor/ghostwriter/coding-standard/tools/composer-normalize --no-check-lock",
        "composer-require-checker": "vendor/ghostwriter/coding-standard/tools/composer-require-checker check",
        "composer-unused": "vendor/ghostwriter/coding-standard/tools/composer-unused",
        "dev": [
            "@cache:clear",
            "@composer update --no-plugins --no-scripts --no-progress --no-interaction --prefer-stable --with-dependencies",
            "@composer-normalize",
            "@psalm:baseline",
            "@check",
            "@psalm:security",
            "@psalm:dry-run"
        ],
        "ecs": "vendor/bin/ecs check --clear-cache --fix --no-interaction",
        "fix": "vendor/bin/phpcbf -p --standard=PSR12 src",
        "infection": "vendor/ghostwriter/coding-standard/tools/infection --ansi --verbose --threads=max --min-msi=0 --min-covered-msi=0",
        "missing-returntypes": "vendor/bin/psalm --alter --issues=MissingReturnType",
        "phpunit": "vendor/ghostwriter/coding-standard/tools/phpunit --do-not-cache-result --colors=always",
        "phpunit:migrate": "@phpunit --migrate-configuration",
        "psalm": "vendor/ghostwriter/coding-standard/tools/psalm --no-cache --no-diff",
        "psalm:baseline": "@psalm --set-baseline=psalm-baseline.xml",
        "psalm:dry-run": "@psalm --alter --issues=all --dry-run",
        "psalm:fix": "@psalm --alter --issues=MissingReturnType",
        "psalm:missing": "vendor/bin/psalm --alter --issues=MissingReturnType",
        "psalm:security": "@psalm --taint-analysis",
        "psalm:shepherd": "@psalm --shepherd --stats",
        "rector": "vendor/bin/rector process --no-ansi --no-interaction --clear-cache",
        "test": [
            "@phpunit",
            "@psalm:shepherd",
            "@infection"
        ]
    }
}
